          <script>
            document
              .getElementById("site-menu")
              ?.addEventListener("click", function () {
                const slideOutDiv = document.getElementById("slide-out-div");
                const overlay = document.getElementById("overlay");

                if (slideOutDiv && overlay) {
                  if (slideOutDiv.classList.contains("open")) {
                    slideOutDiv.classList.remove("open");
                    overlay.classList.remove("show");
                  } else {
                    slideOutDiv.classList.add("open");
                    overlay.classList.add("show");
                  }
                }
              });

            document
              .getElementById("overlay")
              ?.addEventListener("click", function () {
                const slideOutDiv = document.getElementById("slide-out-div");
                const overlay = document.getElementById("overlay");

                if (slideOutDiv && overlay) {
                  slideOutDiv.classList.remove("open");
                  overlay.classList.remove("show");
                }
              });
          </script>

          <style>
            #slide-out-div {
              position: fixed;
              top: 0;
              right: -65vw;
              width: 60vw;
              height: 100vh;
              background: rgba(255, 255, 255, 0.5);
              backdrop-filter: blur(10px);
              -webkit-backdrop-filter: blur(10px);
              box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
              transition: right 0.3s ease;
              z-index: 5;
              display: flex;
              flex-direction: column;
              align-items: center;
              justify-content: center;
            }
            #slide-out-div.open {
              right: 0;
            }
            :global(.dark) #slide-out-div {
              background: rgba(0, 0, 0, 0.5);
            }

            #overlay {
              position: fixed;
              top: 0;
              right: -100vw;
              width: 100vw;
              height: 100vh;
              background: rgba(255, 255, 255, 0.3);
              transition: right 0.3s ease;
              z-index: 4;
            }
            #overlay.show {
              right: 0;
            }
            :global(.dark) #overlay {
              background: rgba(0, 0, 0, 0.3);
            }

            .favicon {
              width: 64px;
              height: 64px;
              border-radius: 50%;
            }

            hr {
              border: none;
              border-top: 1px solid aliceblue;
            }
            :global(.dark) hr {
              border-top: 1px solid #d8ae7e;
            }

            a {
              text-decoration: none;
            }

            p {
              font-size: 0.8em;
            }

            .page-links {
              display: flex;
              flex-direction: column;
              line-height: 2.5em;
            }
            :global(.dark) .page-links a {
              color: #d8ae7e;
            }

            .social-links {
              display: flex;
              justify-content: center;
              gap: 1em;
              margin-top: 1em;
            }
            .social-links a {
              text-decoration: none;
              color: #146c94;
            }
            .social-links a:hover {
              color: #a8d7f7;
            }
            :global(.dark) .social-links a {
              text-decoration: none;
              color: #f7dcb9;
            }
            :global(.dark) .social-links a:hover {
              color: #d8ae7e;
            }

            @media (max-width: 720px) {
              svg {
                width: 24px;
                height: 24px;
              }
